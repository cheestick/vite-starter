{
  "requirePragma": false,
  "insertPragma": false,
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": false,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": true,
  "arrowParens": "always",
  "singleAttributePerLine": true,
  "endOfLine": "lf",
  "overrides": [
    {
      "files": [
        "html",
        "legacy/**/*.js"
      ],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}